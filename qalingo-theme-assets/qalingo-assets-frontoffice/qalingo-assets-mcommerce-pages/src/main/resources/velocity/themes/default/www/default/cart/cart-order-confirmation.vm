<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="$localeLanguageCode">
	<head>
		#parse("../_include/head-common.vm")
	</head>

	<body data-spy="scroll" data-target=".subnav" data-offset="50">

		#* Navbar *#
		#parse("../_include/header.vm")

		#* Start container *#
		<div class="container">
		
			#* Header Content *#
			#parse("../_include/menu.vm")

			#* Main Content *#
			<div class="container">
				<div id="container-body">
					<div id="breadcrumb">
						#parse("../_include/breadcrumb.vm")
					</div>
					<div>
						<div id="cart-payment-content" style="margin-top: 15px; margin-bottom: 15px;">
							<div style="width: 48%; float:left; padding: 5px; border: 1px solid #E5E5E5;">
								$order.confirmationMessage
							</div>
							<div style="width: 48%; float:right; padding: 5px; border: 1px solid #E5E5E5;">
								#parse("../_include/order-details.vm")
							</div>
							<div style="clear: both;"></div>
						</div>
					</div>
				</div>
			</div>
			
			#* Footer *#
			#parse("../_include/footer.vm")

		</div>
		#* End container *#

		#parse("../_include/bottom-javascript.vm")
	
	</body>
</html>