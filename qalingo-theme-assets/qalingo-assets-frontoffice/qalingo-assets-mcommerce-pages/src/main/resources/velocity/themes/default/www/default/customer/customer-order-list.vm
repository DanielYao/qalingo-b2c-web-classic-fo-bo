<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="$localeLanguageCode">
	<head>
		#parse("../_include/head-common.vm")
	</head>

	<body data-spy="scroll" data-target=".subnav" data-offset="50">

		#* Navbar *#
		#parse("../_include/header.vm")

		#* Start container *#
		<div class="container">
		
			#* Header Content *#
			#parse("../_include/menu.vm")

			#* Main Content *#
			<div id="container-body">
				<div id="breadcrumb">
					#parse("../_include/breadcrumb.vm")
				</div>
			
				<section id="customer-order-list">
					<div class="page-header">
						<h1>${mainContentTitle}</h1>
					</div>
	
					#parse("_include/customer-menu.vm")

					<div style="float: left; width: 80%;" class="form-horizontal well">
						<div>
							<div style="width: 950px; border: 0px solid #B8B6B6; background-color: #ffffff; padding: 10px; float:left;">
								#parse("../_include/pagination-pagelistholder.vm")
								<div>
									<table class="table" style="width: 100%">
										<thead>
											<tr>
												<th width="100px">Order ID</th>
												<th width="200px">Date</th>
												<th width="200px">Total Amount</th>
												<th width="150px">Status</th>
												<th width="150px"></th>
											</tr>
										</thead>
										<tbody>
											#foreach($order in $pagedListHolder.pageList)
											<tr>
												<td>${order.orderNum}</td>
												<td>${order.dateCreate}</td>
												<td>${order.totalAmount}</td>
												<td>${order.status}</td>
												<td>
													<a class="btn" href="$order.orderDetailsUrl" alt="">details</a>
												</td>
											</tr>
											#end
										</tbody>  
									</table> 
								</div>
							</div>
						</div>					
					</div>
					<div style="clear: both;"></div>
				</section>
			</div>
			
			<div style="clear: both;"></div>
			
			#* Footer *#
			#parse("../_include/footer.vm")

		</div>
		#* End container *#

		#parse("../_include/bottom-javascript.vm")
	
	</body>
</html>