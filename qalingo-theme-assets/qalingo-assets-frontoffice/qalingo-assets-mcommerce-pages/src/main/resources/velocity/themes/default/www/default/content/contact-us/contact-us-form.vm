#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

			
				<section id="contact-us">
					<div class="page-header">
						<h1>${mainContentTitle}</h1>
					</div>
					<form id="contactUsForm" name="contactUsForm" action="contact-us.html" method="POST">
					#springBind("contactUsForm")
					#if($status.errors.hasErrors()) 
					<div id="errors" class="alert alert-error">
						## Global error messages 
						#foreach($e in $status.errorMessages) 
							<p>${e}</p> 
						#end 
						## Field error messages 
						#foreach($fieldError in $status.errors.fieldErrors) 
							#springBind("contactUsForm.${fieldError.field}") 
							#foreach($errorMessage in $status.errorMessages) 
								${errorMessage}<br/>
							#end 
						#end 
					</div>
					#end 
					<div>
						<div style="width: 400px; height: 350px; border: 0px solid #B8B6B6; background-color: #ffffff; padding: 10px; float:left;">
							<div style="padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="lastname" class="label-form">$contactUs.lastnameLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="lastname" name="lastname" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="firstname" class="label-form">$contactUs.firstnameLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="firstname" name="firstname" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="country" class="label-form">$contactUs.countryLabel</label>
								</div>
								<div style="float: left;">
									<select id="country" name="country" style="width: 205px; height: 25px;" >
										<option value="">--</option>
										#foreach($country in $countries)
											#if($country.key == $contactUsForm.country)
											<option value="$country.key" selected="selected">$country.value</option>
											#else
											<option value="$country.key">$country.value</option>
											#end
										#end
									</select>
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="email" class="label-form">$contactUs.emailLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="email" name="email" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="phone" class="label-form">$contactUs.phoneLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="phone" name="phone" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
								<label for="fax" class="label-form">$contactUs.faxLabel</label>
								</div>
								<div style="float: left;">
								<input type="text" id="fax" name="fax" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="mobile" class="label-form">$contactUs.mobileLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="mobile" name="mobile" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="website" class="label-form">$contactUs.websiteLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="website" name="website" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
						</div>
						<div style="width: 550px; height: 350px; border: 0px solid #B8B6B6; background-color: #ffffff; margin: 10px; padding: 10px; float:left;">
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="subject" class="label-form">$contactUs.subjectLabel</label>
								</div>
								<div style="float: left;">
									<input type="text" id="subject" name="subject" value="" style="width: 200px; height: 20px;" />
								</div>
							</div>
							<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
								<div style="float: left; width: 100px;">
									<label for="message" class="label-form">$contactUs.messageLabel</label>
								</div>
								<div style="float: left;">
									<textarea id="message" name="message" cols="40" rows="5" style="width: 400px; height: 150px;"></textarea>
								</div>
							</div>
							<div style="width: 600px; clear: both; text-align: right; padding-top: 5px; padding-bottom: 5px;">
								<button class="btn" onclick="javascript:window.location.href='$contactUs.backUrl'">$contactUs.cancelLabel</button>
								<button class="btn btn-primary" type="submit">$contactUs.submitLabel</button>
							</div>
							<div style="padding-top: 15px; height: 70px;">
								<p style="color: #9b9b9b; font-style: italic; font-size: 12px; text-align: justify;">
									$legalTerms.warning
								</p>
							</div>
						</div>
					</div>
					</form>
				</section>
