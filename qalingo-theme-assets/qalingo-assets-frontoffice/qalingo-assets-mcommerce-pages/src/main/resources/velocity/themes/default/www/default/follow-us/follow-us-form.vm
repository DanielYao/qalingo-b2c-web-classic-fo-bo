<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="$localeLanguageCode">
	<head>
		#parse("../_include/head-common.vm")
	</head>

	<body data-spy="scroll" data-target=".subnav" data-offset="50">

		#* Navbar *#
		#parse("../_include/header.vm")

		#* Start container *#
		<div class="container">
		
			#* Header Content *#
			#parse("../_include/menu.vm")

			#* Main Content *#
			<div id="container-body">
				<div id="breadcrumb">
					#parse("../_include/breadcrumb.vm")
				</div>
			
				<section id="follow-us">
					<div class="page-header">
						<h1>${mainContentTitle}</h1>
					</div>
					
					<div>
						<div style="width: 400px; height: 350px; background-color: #ffffff; padding: 10px; float:left;">
						#foreach($followOption in $followUs.followOptions)
							<div style="height: 90px;">
								<div style="width: 80px; float: left;">
									<a href="$followOption.url" target="_blank">
										<img border="0" src="$followOption.urlImg" title="" alt="$followOption.urlLabel">
									</a>
								</div>
								<div style="float: left;">
									<p style="color: #9b9b9b; font-style: italic; font-size: 12px;">$followOption.text</p>
									<a href="$followOption.url" target="_blank" style="color: #9b9b9b; font-size: 14px;" alt="$followOption.urlLabel">
										$followOption.title
									</a>
								</div>
							</div>
						#end
						</div>
						<div style="width: 700px; height: 350px; background-color: #ffffff; margin: 10px; padding: 10px; float:left;">
							<div style="width: 100%; height: 275px;">
							
								<form id="followUsForm" name="followUsForm" action="follow-us.html" method="POST">
									#springBind("followUsForm")
									#if($status.errors.hasErrors()) 
									<div id="errors" class="alert alert-error">
										## Global error messages 
										#foreach($e in $status.errorMessages) 
											<p>${e}</p> 
										#end 
										## Field error messages 
										#foreach($fieldError in $status.errors.fieldErrors) 
											#springBind("followUsForm.${fieldError.field}") 
											#foreach($errorMessage in $status.errorMessages) 
												${errorMessage}<br/>
											#end
										#end 
									</div>
									#end 
									<div style="padding-top: 5px; padding-bottom: 5px;">
										<div style="float: left; width: 100px;">
											<label for="email" class="label-form">$followUs.emailLabel</label>
										</div>
										<div style="float: left;">
											<input type="text" id="email" name="email" value="" style="width: 200px; height: 20px;" />
										</div>
									</div>
									<div style="width: 600px; clear: both; text-align: right; padding-top: 5px; padding-bottom: 5px;">
										<button class="btn" onclick="javascript:window.location.href='$followUs.backUrl'">$followUs.cancelLabel</button>
										<button class="btn btn-primary" type="submit">$followUs.submitLabel</button>
									</div>
								</form>
									
							</div>
							<div style="width: 100%; height: 70px;">
								<p style="color: #9b9b9b; font-style: italic; font-size: 12px; text-align: justify;">
									$legacy.warning
								</p>
							</div>
						</div>
					</div>
				</section>
			</div>
			
			<div style="clear: both;"></div>
			
			#* Footer *#
			#parse("../_include/footer.vm")

		</div>
		#* End container *#

		#parse("../_include/bottom-javascript.vm")
	
	</body>
</html>
