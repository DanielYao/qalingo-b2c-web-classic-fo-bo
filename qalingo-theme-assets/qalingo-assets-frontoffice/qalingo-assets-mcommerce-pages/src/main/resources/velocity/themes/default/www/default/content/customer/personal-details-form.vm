#set ($layout = "default/www/default/layout/default.vm")
#set ($page_title = $seoPageTitle)

			
				<section id="customer-edit">
					<div class="page-header">
						<h1>${mainContentTitle}</h1>
					</div>
					#parse("_include/customer-menu.vm")

					<div style="float: left; width: 80%;" class="form-horizontal well">
						<form id="customerEditForm" name="customerEditForm" action="customer-edit.html" method="POST">
						#springBind("customerEditForm")
						#if($status.errors.hasErrors()) 
						<div id="errors" class="alert alert-error">
							## Global error messages 
							#foreach($e in $status.errorMessages) 
								<p>${e}</p> 
							#end 
							## Field error messages 
							#foreach($fieldError in $status.errors.fieldErrors) 
								#springBind("customerEditForm.${fieldError.field}") 
								#foreach($errorMessage in $status.errorMessages) 
									${errorMessage}<br/>
								#end 
							#end 
						</div>
						#end 
						<div>
							<div style="float: left; width: 400px; height: 350px; border: 0px solid #B8B6B6; background-color: #ffffff; padding-left: 10px; margin-bottom: 50px;">
								<div style="padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="title" class="label-form">$wording.get("fo.customer.form_create_account_label_title")</label>
									</div>
									<div style="float: left;">
										<select id="title" name="title" style="width: 205px; height: 25px;" >
											<option value="">--</option>
											#foreach($title in $titles)
												#if($title.key == $customerEditForm.title)
												<option value="$title.key" selected="selected">$title.value</option>
												#else
												<option value="$title.key">$title.value</option>
												#end
											#end
										</select>
									</div>
								</div>
								<div style="padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="lastname" class="label-form">$wording.get("fo.customer.form_account_label_lastname")</label>
									</div>
									<div style="float: left;">
										<input type="text" id="lastname" name="lastname" value="$customerEditForm.lastname" style="width: 200px;" />
									</div>
								</div>
								<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="firstname" class="label-form">$wording.get("fo.customer.form_account_label_firstname")</label>
									</div>
									<div style="float: left;">
										<input type="text" id="firstname" name="firstname" value="$customerEditForm.firstname" style="width: 200px;" />
									</div>
								</div>						
								<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="email" class="label-form">$wording.get("fo.customer.form_account_label_email")</label>
									</div>
									<div style="float: left;">
										<input type="text" id="email" name="email" value="$customerEditForm.email" style="width: 200px;" />
									</div>
								</div>
								<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="phone" class="label-form">$wording.get("fo.customer.form_account_label_phone")</label>
									</div>
									<div style="float: left;">
										<input type="text" id="phone" name="phone" value="$customerEditForm.phone" style="width: 200px;" />
									</div>
								</div>
								<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
									<label for="fax" class="label-form">$wording.get("fo.customer.form_account_label_fax)</label>
									</div>
									<div style="float: left;">
									<input type="text" id="fax" name="fax" value="$customerEditForm.fax" style="width: 200px;" />
									</div>
								</div>
								<div style="clear: both; padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="mobile" class="label-form">$wording.get("fo.customer.form_account_label_mobile")</label>
									</div>
									<div style="float: left;">
										<input type="text" id="mobile" name="mobile" value="$customerEditForm.mobile" style="width: 200px;" />
									</div>
								</div>
								<div style="clear: both;"></div>
								<div style="padding-top: 5px; padding-bottom: 5px;">
									<div style="float: left; width: 100px;">
										<label for="optin" class="label-form">$wording.get("fo.customer.form_account_label_optin")</label>
									</div>
									<div style="float: left;">
										<input type="checkbox" id="optin" value="test">
									</div>
								</div>
							  
								<div style="width: 600px; clear: both; text-align: right; padding-top: 5px; padding-bottom: 5px;">
									<button class="btn" onclick="javascript:window.location.href='$backUrl'">$wording.get("fo.customer.form_create_account_label_cancel")</button>
									<button class="btn btn-primary" type="submit">$wording.get("fo.customer.form_create_account_label_submit")</button>
								</div>
								<div style="padding-top: 15px; height: 70px;">
									<p style="color: #9b9b9b; font-style: italic; font-size: 12px; text-align: justify;">
										$legalTerms.warning
									</p>
								</div>
							</div>
							<div style="clear: both;"></div>
						</div>
						</form>
					</div>

				</section>
