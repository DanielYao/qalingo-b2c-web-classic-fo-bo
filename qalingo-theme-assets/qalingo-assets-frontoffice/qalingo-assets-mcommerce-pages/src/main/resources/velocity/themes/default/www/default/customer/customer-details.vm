<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html lang="$localeLanguageCode">
	<head>
		#parse("../_include/head-common.vm")
	</head>

	<body data-spy="scroll" data-target=".subnav" data-offset="50">

		#* Navbar *#
		#parse("../_include/header.vm")

		#* Start container *#
		<div class="container">
		
			#* Header Content *#
			#parse("../_include/menu.vm")

			#* Main Content *#
			<div id="container-body">
				<div id="breadcrumb">
					#parse("../_include/breadcrumb.vm")
				</div>
				<section id="customer-details">
					<div class="page-header">
						<h1>${mainContentTitle}</h1>
					</div>

					#parse("_include/customer-menu.vm")

					<div style="float: left; width: 80%;" class="form-horizontal well">
						<fieldset>
							<div class="control-group">
								<label class="control-label">${customerDetails.lastnameLabel}</label>
								<div class="controls" style="padding-top: 5px;">
									${customerDetails.lastnameValue}
								</div>
							</div>
							<div class="control-group">
								<label class="control-label">${customerDetails.firstnameLabel}</label>
								<div class="controls" style="padding-top: 5px;">
									${customerDetails.firstnameValue}
								</div>
							</div>
							<div class="control-group">
								<label class="control-label">${customerDetails.emailLabel}</label>
								<div class="controls" style="padding-top: 5px;">
									${customerDetails.emailValue}
								</div>
							</div>
							<div class="control-group">
								<label class="control-label">${customerDetails.dateCreateLabel}</label>
								<div class="controls" style="padding-top: 5px;">
									${customerDetails.dateCreateValue}
								</div>
							</div>
							<div class="control-group">
								<label class="control-label">${customerDetails.dateUpdateLabel}</label>
								<div class="controls" style="padding-top: 5px;">
									${customerDetails.dateUpdateValue}
								</div>
							</div>
							#foreach($customerAttribute in $customerDetails.customerAttributes.entrySet())
								<div class="control-group">
									<label class="control-label">$customerAttribute.value.key</label>
									<div class="controls" style="padding-top: 5px;">
										$customerAttribute.value.value
									</div>
								</div>
							#end
						</fieldset>
					</div>
					<div style="clear: both;"></div>

				</section>
			</div>
			
			#* Footer *#
			#parse("../_include/footer.vm")

		</div>
		#* End container *#

		#parse("../_include/bottom-javascript.vm")
	
	</body>
</html>